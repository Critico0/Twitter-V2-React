<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("../partials/meta") %>
</head>


<body>
  <div class="container mt-3">
    <div class="row">
      <div class="col-xxl-2 col-3"><%- include("../partials/sidebar-left") %></div>
      <div class="col-xxl-6 col-8 pt-3">
        <%- include("../partials/header") %>
          <div class="container">
            <section class="m-1 p-1 borders">
              <div class="bBotom">
                <div class="profile mb-3">
                  <p class="mb-1 p-3 arrow">‚Üê</p>
                  <div class="p-3">
                    <h1 class="title-h1">
                      <%= user.firstname %>
                        <%= user.lastname %>
                    </h1>
                    <h2 class="title-h2">@<%= user.username %>
                    </h2>
                  </div>
                </div>
                <div class="d-flex justify-content-around ">
                  <span class="fw-bold" class="fw-bold following">Followers</span>
                  <a href="/following" id="abtn">Following</a>
                </div>
              </div>

              <div class="container">
                <ul class="user-list">
                  <% for (const follower of followers) { %>

                    <li class="user-list-item mb-4">
                      <div class="row justify-content-between">
                        <div class="col-sm-8">
                          <div class="d-flex align-items-center">
                            <img src="<%= follower.avatar %>" alt="User 1" class="user-list-image">
                            <div>
                              <h3 class="fw-bold hUser mb-0">
                                <%= follower.username %>
                              </h3>
                              <p class="pUser">@<%= follower.email %>
                              </p>
                            </div>
                          </div>
                        </div>
                        <div class="col-sm-4 d-flex align-items-center justify-content-end">
                          <% if (true) { %>
                            <a href="/removeFollower" class="following-button mt-2">Following</a>
                            <% } else { %>
                              <a href="/follow/<%= user._id %>" class="twitter-button mt-2">Follow</a>
                              <% } %>
                        </div>
                      </div>
                    </li>
                    <% } %>
                </ul>
              </div>
            </section>
          </div>
      </div>
      <div class="col-xxl-4 pt-3"><%- include("../partials/sidebar-right") %></div>
    </div>
  </div>
</body>

</html>