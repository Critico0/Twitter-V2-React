<header class="mt-3">
  <dd class="fw-medium">Home</dd>
  <div class="border-bottom">
    <div class="row">
      <div class="col-2">
        <img id="headerImg" class="rounded-circle img-fluid my-2" src="<%= user.avatar %>" alt="" />
      </div>
      <div class="col-10">
        <form id="tweetForm" action="" enctype="multipart/form-data">
          <textarea
            class="form-control py-3"
            aria-label="Text"
            name="tweetContent"
            id="tweetContent"
            cols="30"
            rows="3"
            placeholder="What's happening"
          ></textarea>
          <button type="submit" class="btn rounded-pill btn-tweet py-1 px-2">Tweet</button>
        </form>
      </div>
    </div>
  </div>
</header>
